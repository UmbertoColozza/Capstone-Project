<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.PhotoGalleryActivity">

<android.support.v4.view.ViewPager
    android:id="@+id/vpphoto"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.9"/>

<RelativeLayout
    android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="0.1">
    <ImageButton
        android:id="@+id/image_button_photo_share"
        android:layout_width="@dimen/icon_button_width"
        android:layout_height="@dimen/icon_button_height"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_share"
        android:contentDescription="@string/content_description_button_share"
        android:backgroundTint="@color/image_button_background_tint"/>
    <ImageButton
        android:id="@+id/image_button_photo_delete"
        android:layout_width="@dimen/icon_button_width"
        android:layout_height="@dimen/icon_button_height"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_trash"
        android:contentDescription="@string/content_description_button_trash"
        android:backgroundTint="@color/image_button_background_tint" />
</RelativeLayout>
</LinearLayout>